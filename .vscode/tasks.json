{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: cpp arquivo de build ativo",
			"command": "C:/msys64/mingw64/bin/cpp.exe",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"${file}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compilador: C:/msys64/mingw64/bin/cpp.exe"
		},
		{
			"type": "cppbuild",
			"label": "C/C++: g++ arquivo de build ativo",
